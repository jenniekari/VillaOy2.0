<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Villa Oy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
          crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/Home/Index">Villa Oy (@ViewBag.LoggedStatus)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="~/Home/Index">
                            Etusivu
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Tuotteet">Tuotteet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About">Meistä</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Contact">Yhteystiedot</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ylläpito</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/TuotteetAdmin/Index">Tuotteet</a>
                            <a class="dropdown-item" href="~/Henkilot/Index">Henkilot</a>
                            <a class="dropdown-item" href="~/Postitoimipaikat/Index">Postitoimipaikat</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Asiakkaat/Index">Asiakkaat</a>
                            <a class="dropdown-item" href="~/Tilauksets/Index">Tilaukset</a>
                            <a class="dropdown-item" href="~/Tilauksets2/Index">Tilaukset ja tilausrivit</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">@Session["UserName"]</a>
                    </li>
                </ul>
                @*
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tietokannan toteuttaminen VS:lla-kurssitehtävä</p>
            @*BS4/SVG-ikonit*@
            <p>
                <a href="https://www.linkedin.com/in/jenniekari/"><img src="~/Icons/linkedin.svg" alt="LinkedIn" width="20" height="20" title="Linkedin"></a>
                &nbsp;
                @*FAS-ikonit*@
                <a href="https://jennieshuffle.fi/" class="fas fa-globe" alt="JennieShuffle" title="JennieShuffle.fi"></a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
