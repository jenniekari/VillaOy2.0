@{
    ViewBag.Title = "Sales10Best";
}

@section scripts {
    <script type="text/javascript">

        let labelTexts = [@Html.Raw(ViewBag.nimi)];
        console.log(labelTexts);
        let dataValues = [@ViewBag.productSales];
        console.log(dataValues);
        var ctx = document.getElementById('barcanvas').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Tuotteiden myynti kokoajalta',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

    </script>
}

<h2>10 parhaiten myytyä tuotetta</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <canvas id="barcanvas"></canvas>
        </div>
    </div>
    <div style="text-align: center">
        @*Tiedot on haettu paikallisesta testitietokannasta!*@
    </div>
</div>
