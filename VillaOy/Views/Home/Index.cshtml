@*JQuery suoritetaan aina, kun sivu latautuu*@
@section scripts {
    <script type="text/javascript">
        $(window).on('load', function () {
            if (@ViewBag.LoginError == 1) {
                $('#myModal').modal('show');
            }
        });
    </script>
}

<div class="jumbotron">
    <h1>Villa Oy</h1>
    <p class="lead">Villa oy myy suomalaista, käsintehtyjä villatuotteita.</p>
</div>

@{
    Html.RenderPartial("_LoginModal");
}

<!--Kuvakaruselli-->
<div id="carousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Pictures/Woman.jpg" alt="pictureofwoman" width="1100" height="500">
        </div>
        <div class="carousel-item">
            <img src="~/Pictures/Wool.jpg" alt="pictureofwool" width="1100" height="500">
        </div>
        <div class="carousel-item">
            <img src="~/Pictures/Children.jpg" alt="pictureofchildren" width="1100" height="500">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#carousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#carousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<br>
<p><a href="https://fi.wikipedia.org/wiki/Villa" class="btn btn-primary btn-lg"><img src="~/Icons/info.svg" alt="VillaWikipedia" width="28" height="28" title="Villa">Lue villasta &raquo;</a></p>

